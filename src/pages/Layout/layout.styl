
.ant-layout-content {
    position: relative;
}

setTransitionStyle() {
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
}

.message-enter {
    setTransitionStyle();
    opacity: 0.01;
    transform: scale(0.9) translateY(50%);
}

.message-enter-active {
    setTransitionStyle();
    opacity: 1;
    transform: scale(1) translateY(0%);
    transition: all 1000ms ease-out;
}

.message-exit {
    setTransitionStyle();
    opacity: 1;
    transform: scale(1) translateY(0%);
}

.message-exit-active {
    setTransitionStyle();
    opacity: 0.01;
    transform: scale(0.9) translateY(50%);
    transition: all 1000ms ease-out;
}

.slide-enter {
    setTransitionStyle();
    opacity: 0.01;
    transform: translateX(100%);
}

.slide-enter-active {
    setTransitionStyle();
    opacity: 1;
    transform: translateX(0%);
    transition: all 300ms ease-out;
}

.slide-exit {
    setTransitionStyle();
    opacity: 1;
    transform: translateX(0%);
}

.slide-exit-active {
    setTransitionStyle();
    opacity: 0.01;
    transform: translateX(100%);
    transition: all 300ms ease-out;
}