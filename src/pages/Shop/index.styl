.shop {
    .com-list {
        float: left;
        width: 300px;
        height: 100%;

        li {
            margin-bottom: 10px;

            * {
                cursor: move;
            }
        }
    }

    .view {
        margin: 0 auto;
        width: 375px;
        border: 1px solid #dcdcdc;
        height: 667px;

        .empty-dom {
            width: 100%;
            height: 32px;
            background: #dfdfdf;
        }
    }

    .fade-enter {
        opacity: 0.01;
    }

    .fade-enter-active {
        opacity: 1;
        transition: opacity 500ms ease-in;
    }

    .fade-exit {
        opacity: 1;
    }

    .fade-exit-active {
        opacity: 0.01;
        transition: opacity 500ms ease-in;
    }
}